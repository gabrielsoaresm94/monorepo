{
  "name": "monorepo",
  "version": "0.0.1",
  "author": "Gabriel Soares",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "lerna run start",
    "start:dev": "lerna run start:dev",
    "start:api": "lerna run --scope @monorepo/api start:dev",
    "start:python": "sudo bash ./packages/python/scripts/start.sh",
    "lint": "lerna run lint"
  },
  "devDependencies": {
    "@commitlint/cli": "9.1.1",
    "@commitlint/config-conventional": "9.1.1",
    "husky": "4.2.5",
    "lerna": "^4.0.0"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E  HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "subject-case": [
        2,
        "never",
        [
          "start-case",
          "pascal-case"
        ]
      ]
    }
  }
}
