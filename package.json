{
  "name": "monorepo",
  "version": "0.0.1",
  "author": "Gabriel Soares <gabrielsoaresm94@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start:python": "sudo bash ./packages/python/start.sh"
  },
  "devDependencies": {
    "@commitlint/cli": "9.1.1",
    "@commitlint/config-conventional": "9.1.1",
    "husky": "4.2.5"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E  HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "subject-case": [
        2,
        "never",
        [
          "start-case",
          "pascal-case"
        ]
      ]
    }
  }
}
